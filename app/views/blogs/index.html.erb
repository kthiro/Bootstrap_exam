<div class = "panel-info">
  <h2 class = "panel-heading">ブログの一覧</h2>
    
  <h4 class = "notice panel-body"><%= notice %></h4>
  <br>
    
  <div class = "panel-footer">
    <table class = "table table-hover">
      <tr>
        <th>タイトル</th>
        <th>本文</th>
        <th>作成日時</th>
        <th>更新日時</th>
        <th></th>
        <th></th>
      </tr>
      <% @blog.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= blog.content %></td>
          <td><%= blog.created_at %></td>
          <td><%= blog.updated_at %></td>
          <td><%= link_to 'ブログを編集する', edit_blog_path(blog[:id]), data: {confirm: 'このブログを編集しますか？'}, class: 'btn btn-success' %></td>
          <td><%= link_to 'ブログを削除する', blog_path(blog[:id]), method: :delete, data: {confirm: '本当に削除して良いですか？'}, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>