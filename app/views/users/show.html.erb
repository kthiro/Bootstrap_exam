<div class = "panel panel-info">
  <h2 class = "panel-heading">プロフィール</h2>

  <div class = "panel-footer row">
    <% if notice %>
      <p class = "alert alert-warning" role = "alert"><%= notice %></p>
    <% end %>
    
    <div class = "col-md-3">
      <div class = "panel panel-default">
        <div class = "panel-heading">
          プロフィール画像
        </div>
        <div class = "panel-body">
          <%= image_tag(@user.image.url) %>
        </div>
      </div>
    </div>
    <div class = "col-md-9">
      <div class = "panel panel-primary">
        <div class = "panel-heading">
          ユーザーネーム
        </div>
        <div class = "panel-body">
          <%= @user.name %>
        </div>
      </div>
      <div class = "panel panel-primary">
        <div class = "panel-heading">
          メールアドレス
        </div>
        <div class = "panel-body">
          <%= @user.email %>
        </div>
      </div>
    </div>
    
    <div class = "row">
      <div class = "col-md-6 panel panel-info">
        <h4 class = "panel-heading">お気に入り一覧</h4>
        <ul class = "list-group">
          <% @favorite_blogs.each do |favorite_blog| %>
            <li class = "list-group-item">
              <div class = "panel-body row">
                <strong><%= link_to favorite_blog[:title], blog_path(favorite_blog[:id]) %></strong>
                <br>
                <br>
                <div class ="col-xs-3">
                  <div class = "image">
                    <% if favorite_blog.image.url %>
                      <%= image_tag(favorite_blog.image.url) %>
                    <% else %>
                      画像の投稿はありません。
                    <% end %>
                  </div>
                </div>
                <div class = "col-xs-9">
                  <div class = "text">
                    <%= favorite_blog[:content] %>
                  </div>
                </div>
              </div>
              <div class = "panel-footer">
                <em>投稿者 <%= User.find(favorite_blog[:user_id])[:name] %></em>
                <small>　　更新日時 <%= favorite_blog[:updated_at] %></small>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div class = "col-md-6 panel panel-info">
        <h4 class = "panel-heading">投稿一覧</h4>
        <ul class = "list-group">
          <% @blogs.each do |blog| %>
            <li class = "list-group-item">
              <div class = "panel-body row">
                <strong><%= link_to blog[:title], blog_path(blog[:id]) %></strong>
                <br>
                <br>
                <div class = "col-xs-3">
                  <div class = "image">
                    <% if blog.image.url %>
                      <%= image_tag(blog.image.url) %>
                    <% else %>
                      画像の投稿はありません。
                    <% end %>
                  </div>
                </div>
                <div class = "col-xs-9">
                  <div class = "text">
                    <%= blog[:content] %>
                  </div>
                </div>
              </div>
              <div class = "panel-footer">
                <em>投稿者 <%= current_user[:name] %></em>
                <small>　　更新日時 <%= blog[:updated_at] %></small>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>